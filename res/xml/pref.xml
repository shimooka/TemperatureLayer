<PreferenceScreen
  android:title="@string/app_name"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:robobunny="http://robobunny.com">

  <PreferenceCategory
      android:title="@string/preference_header_boot">

      <CheckBoxPreference
          android:id="@+id/view_start_on_boot"
          android:key="key_start_on_boot"
          android:title="@string/label_start_on_boot"/>


  </PreferenceCategory>
  <PreferenceCategory
      android:title="@string/preference_header_display">

      <ListPreference
          android:id="@+id/view_temperature_unit"
          android:key="key_temperature_unit"
          android:title="@string/label_temperature_unit"
          android:dialogTitle="@string/dialogtitle_temperature_unit"
          android:entries="@array/entries_temperature_unit"
          android:entryValues="@array/values_temperature_unit"
          android:defaultValue="@string/default_temperature_unit" />

      <com.google.android.apps.mytracks.IntegerListPreference
          android:id="@+id/view_layout"
          android:key="key_layout"
          android:title="@string/label_layout"
          android:dialogTitle="@string/dialogtitle_layout"
          android:entries="@array/entries_layout"
          android:entryValues="@array/values_layout"
          android:defaultValue="@integer/default_layout" />

      <com.ulduzsoft.preferences.FontPreference
          android:id="@+id/view_font"
          android:key="key_font"
          android:title="@string/label_font" />

      <com.google.android.apps.mytracks.IntegerListPreference
          android:id="@+id/view_text_size"
          android:key="key_text_size"
          android:title="@string/label_text_size"
          android:dialogTitle="@string/dialogtitle_text_size"
          android:entries="@array/entries_text_size"
          android:entryValues="@array/values_text_size"
          android:defaultValue="@integer/default_text_size" />

      <net.margaritov.preference.colorpicker.ColorPickerPreference
          android:id="@+id/view_color"
          android:key="key_color"
          android:title="@string/label_color"
          android:defaultValue="@color/default_color"
          alphaSlider="true" />

  </PreferenceCategory>
  <PreferenceCategory
      android:title="@string/preference_header_notification">

      <CheckBoxPreference
          android:id="@+id/view_notification"
          android:key="key_notification"
          android:title="@string/label_notification"/>

  </PreferenceCategory>
  <PreferenceCategory
      android:title="@string/preference_header_alert">

      <CheckBoxPreference
          android:id="@+id/view_alert"
          android:key="key_alert"
          android:title="@string/label_alert"/>

      <com.google.android.apps.mytracks.IntegerListPreference
          android:id="@+id/view_temperature_threshold"
          android:key="key_temperature_threshold"
          android:title="@string/label_temperature_threshold"
          android:dialogTitle="@string/dialogtitle_temperature_threshold"
          android:entries="@array/entries_temperature_threshold"
          android:entryValues="@array/values_temperature_threshold"
          android:defaultValue="@integer/default_temperature_threshold"
          android:dependency="key_alert"/>

